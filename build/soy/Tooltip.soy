{/template}

/**
 * @param? elementContent
 * @param id
 * @param? surfaceId
 */
{deltemplate Tooltip.inner variant="'element'"}
	<section id="{$id}-inner" class="tooltip-inner">{$elementContent}</section>
{/deltemplate}

