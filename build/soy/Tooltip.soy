{namespace Templates.Tooltip}

/**
 * This renders the main element.
 * @param content
 */
{template .content}
	<div class="tooltip-arrow"></div>
	{delcall Tooltip.inner data="all" /}
{/template}

/**
 * @param content
 */
{template .inner}
